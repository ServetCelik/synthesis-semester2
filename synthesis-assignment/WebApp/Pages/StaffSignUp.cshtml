@page
@model WebApp.Pages.StaffSignUpModel
@{
}

<form method= "post">
    <div class = "border p-3 mt-4">
        <div class = "text-center">
        <div class="row pb-2">
            <h2 class= text-primary pl-3"> Create New Staff</h2>
            
        </div>
        <div class= "mb-3">
           <label asp-for="NewStaff.UserName">User Name:</label> 
           <input type="text" asp-for="NewStaff.UserName" placeholder = "User Name">
           <span asp-validation-for="NewStaff.UserName"></span>
        </div>

        <div class= "mb-3">
           <label asp-for="NewStaff.Password">Password:&nbsp;&nbsp;&nbsp;</label>  
           <input type="password" asp-for="NewStaff.Password" placeholder="Password">
           <span asp-validation-for="NewStaff .Password"></span>
        </div>

        <div class= "mb-3">
           <label asp-for="NewStaff.Email">Email:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label> 
           <input type="email" asp-for="NewStaff.Email" placeholder = "User Name">
           <span asp-validation-for="NewStaff.Email"></span>
        </div>

        <div class= "mb-3">
           <label asp-for="NewStaff.Role">Role:</label> 
           <input type="radio" asp-for="NewStaff.Role" value="Admin" />Admin<br />
           &nbsp;&nbsp;&nbsp;&nbsp;<input type="radio" asp-for="NewStaff.Role" value="HR" />HR<br />           
           <span asp-validation-for="NewStaff.Role"></span>
        </div>


        <div class = "text-center">
            <button type= "submit" class="btn btn-primary" style= "width:180px">Create</button>
            <button type="reset" class="btn btn-warning" style= "width: 180px" value= "Cancel">Cancel</button>            
        </div>
        
        </div>
    </div>


</form>